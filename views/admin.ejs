<div class="container">
    <h2 class="mb-4">Admin Panel</h2>
    
    <div class="row mb-5">
        <div class="col-12">
            <h3>User Management</h3>
            <div class="row">
                <% pendingUsers.forEach(function(user) { %>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <% if (user.profile_picture) { %>
                                        <img src="<%= user.profile_picture %>" alt="Profile" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <span class="text-white"><%= user.username.charAt(0).toUpperCase() %></span>
                                        </div>
                                    <% } %>
                                    <h5 class="card-title mb-0"><%= user.username %></h5>
                                </div>
                                <p class="card-text">Registered: <%= new Date(user.created_at).toLocaleString() %></p>
                                <div class="d-flex gap-2">
                                    <form action="/admin/approve-user/<%= user.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success">Approve User</button>
                                    </form>
                                    <form action="/admin/delete-user/<%= user.id %>" method="POST" class="d-inline" 
                                          onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h3>All Users</h3>
            <div class="row">
                <% allUsers.forEach(function(user) { %>
                    <% if (user.username !== 'BobKÃ¥re') { %>
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <% if (user.profile_picture) { %>
                                            <img src="<%= user.profile_picture %>" alt="Profile" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        <% } else { %>
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                <span class="text-white"><%= user.username.charAt(0).toUpperCase() %></span>
                                            </div>
                                        <% } %>
                                        <h5 class="card-title mb-0"><%= user.username %></h5>
                                    </div>
                                    <p class="card-text">
                                        Status: <%= user.approved ? 'Approved' : 'Pending' %><br>
                                        Role: <%= user.role %><br>
                                        Created: <%= new Date(user.created_at).toLocaleString() %>
                                    </p>
                                    <form action="/admin/delete-user/<%= user.id %>" method="POST" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                        <button type="submit" class="btn btn-danger">Delete User</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h3>Comments Management</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Post</th>
                            <th>Comment</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allComments.forEach(function(comment) { %>
                            <tr>
                                <td><%= comment.username %></td>
                                <td><%= comment.item_title %></td>
                                <td><%= comment.content %></td>
                                <td><%= new Date(comment.created_at).toLocaleString() %></td>
                                <td>
                                    <form action="/admin/delete-comment/<%= comment.id %>" method="POST" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this comment?')">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h3>Pending Content</h3>
            <div class="row">
                <% pendingItems.forEach(function(item) { %>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.title %></h5>
                                <p class="card-text"><%= item.content %></p>
                                <p class="text-muted">By: <%= item.author || 'Unknown' %></p>
                                <p class="text-muted">Votes: <%= item.vote_count %></p>
                                <div class="d-flex gap-2">
                                    <form action="/admin/approve/<%= item.id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success">Approve</button>
                                    </form>
                                    <form action="/admin/delete-post/<%= item.id %>" method="POST" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3>Approved Content</h3>
            <div class="row">
                <% approvedItems.forEach(function(item) { %>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.title %></h5>
                                <p class="card-text"><%= item.content %></p>
                                <p class="text-muted">By: <%= item.author || 'Unknown' %></p>
                                <p class="text-muted">Votes: <%= item.vote_count %></p>
                                <form action="/admin/delete-post/<%= item.id %>" method="POST" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
