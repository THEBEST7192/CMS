                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editPostModalLabel<%= item.id %>">Edit Post</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form action="/post/edit/<%= item.id %>" method="POST">
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="postTitle<%= item.id %>" class="form-label">Title</label>
