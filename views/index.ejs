                                                                <input class="form-check-input" type="checkbox" id="keepGif<%= comment.id %>" name="keepGif" value="true" checked>
                                                                <label class="form-check-label" for="keepGif<%= comment.id %>">
                                                                    Keep this GIF
                                                                </label>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% }); %>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle comments functionality
        const toggleButtons = document.querySelectorAll('.toggle-comments-btn');
        toggleButtons.forEach(button => {
            const itemId = button.getAttribute('data-item-id');
            const commentsContainer = document.querySelector(`.comments-container[data-item-id="${itemId}"]`);
            
            // Hide comments by default
            commentsContainer.style.display = 'none';
            
            button.addEventListener('click', function() {
                if (commentsContainer.style.display === 'none') {
                    commentsContainer.style.display = 'block';
                } else {
                    commentsContainer.style.display = 'none';
                }
            });
        });
        
        // Form validation to allow GIF-only comments
        const commentForms = document.querySelectorAll('form[action="/comment"]');
        commentForms.forEach(form => {
            form.addEventListener('submit', function(e) {
                const itemId = this.querySelector('input[name="itemId"]').value;
                const contentTextarea = this.querySelector(`.comment-text-input[data-item-id="${itemId}"]`);
                const gifUrlInput = this.querySelector(`.selected-gif-url[data-item-id="${itemId}"]`);
                
                // Allow submission if either text or GIF is provided
                if ((contentTextarea.value.trim() === '' || !contentTextarea.value) && !gifUrlInput.value) {
                    e.preventDefault();
                    alert('Please add either text or a GIF to your comment.');
                }
            });
        });

        // Handle comment GIF search
        const searchInputs = document.querySelectorAll('.comment-gif-search');
        const searchBtns = document.querySelectorAll('.search-gif-btn');
        const resultContainers = document.querySelectorAll('.comment-gif-results');
        const selectedGifUrls = document.querySelectorAll('.selected-gif-url');
        const selectedGifs = document.querySelectorAll('.selected-gif');
        const selectedGifPreviews = document.querySelectorAll('.selected-gif-preview');
        const removeGifBtns = document.querySelectorAll('.remove-gif-btn');
        
        // Add event listeners for search buttons
        searchBtns.forEach(btn => {
            btn.addEventListener('click', async function() {
                const itemId = this.getAttribute('data-item-id');
                const searchInput = document.querySelector(`.comment-gif-search[data-item-id="${itemId}"]`);
                const resultsContainer = document.querySelector(`.comment-gif-results[data-item-id="${itemId}"]`);
                
                const searchTerm = searchInput.value.trim();
                if (!searchTerm) return;
                
                try {
                    resultsContainer.innerHTML = '<div class="col-12 text-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>';
                    
                    const response = await fetch(`/api/search-gifs?query=${encodeURIComponent(searchTerm)}`);
                    const data = await response.json();
                    
                    if (data.results && data.results.length > 0) {
                        resultsContainer.innerHTML = '';
                        data.results.forEach(gif => {
                            const gifUrl = gif.media_formats.gif.url;
                            const previewUrl = gif.media_formats.tinygif.url;
                            
                            const col = document.createElement('div');
                            col.className = 'col-md-4 col-6 mb-2';
                            col.innerHTML = `
                                <div class="card gif-card" style="cursor: pointer;">
                                    <img src="${previewUrl}" class="card-img-top" alt="GIF" loading="lazy" style="height: 80px; object-fit: cover;">
                                </div>
                            `;
                            
                            col.querySelector('.gif-card').addEventListener('click', function() {
                                const selectedGifUrl = document.querySelector(`.selected-gif-url[data-item-id="${itemId}"]`);
                                const selectedGif = document.querySelector(`.selected-gif[data-item-id="${itemId}"]`);
                                const selectedGifPreview = document.querySelector(`.selected-gif-preview[data-item-id="${itemId}"]`);
                                
                                selectedGifUrl.value = gifUrl;
                                selectedGifPreview.src = gifUrl;
                                selectedGif.classList.remove('d-none');
                                resultsContainer.innerHTML = '';
                                searchInput.value = '';
                            });
                            
                            resultsContainer.appendChild(col);
                        });
                    } else {
                        resultsContainer.innerHTML = '<div class="col-12"><p class="text-center">No GIFs found</p></div>';
                    }
                } catch (error) {
                    console.error('Error searching for GIFs:', error);
                    resultsContainer.innerHTML = '<div class="col-12"><p class="text-center text-danger">Error searching for GIFs</p></div>';
                }
            });
        });
        
        // Add event listeners for remove GIF buttons
        removeGifBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const itemId = this.getAttribute('data-item-id');
                const selectedGifUrl = document.querySelector(`.selected-gif-url[data-item-id="${itemId}"]`);
                const selectedGif = document.querySelector(`.selected-gif[data-item-id="${itemId}"]`);
                const selectedGifPreview = document.querySelector(`.selected-gif-preview[data-item-id="${itemId}"]`);
                
                selectedGifUrl.value = '';
                selectedGifPreview.src = '';
                selectedGif.classList.add('d-none');
            });
        });
        
        // Allow searching by pressing Enter
        searchInputs.forEach(input => {
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const itemId = this.getAttribute('data-item-id');
                    const searchBtn = document.querySelector(`.search-gif-btn[data-item-id="${itemId}"]`);
                    searchBtn.click();
                }
            });
        });
    });
</script>
