<div class="row">
    <% items.forEach(function(item) { %>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <% if (item.author_picture) { %>
                            <img src="<%= item.author_picture %>" alt="Author" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                        <% } else { %>
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                <span class="text-white"><%= item.author_display_name ? item.author_display_name.charAt(0).toUpperCase() : 'U' %></span>
                            </div>
                        <% } %>
                        <div>
                            <h5 class="card-title mb-0"><%= item.title %></h5>
                            <small class="text-muted">Posted by <%= item.author_display_name ? `${item.author_display_name} (@${item.author_username})` : item.author_username %> on <%= new Date(item.created_at).toLocaleString() %></small>
                        </div>
                    </div>
                    
                    <p class="card-text"><%= item.content %></p>
                    
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <% if (locals.user) { %>
                            <form action="/vote/<%= item.id %>?type=upvote" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm <%= item.hasVoted ? 'btn-primary' : 'btn-outline-primary' %>">
                                    <i class="bi bi-hand-thumbs-up<%= item.hasVoted ? '-fill' : '' %>"></i>
                                    <%= item.hasVoted ? 'Unvote' : 'Vote' %>
                                </button>
                            </form>
                        <% } %>
                        <div class="d-flex gap-2">
                            <span class="badge bg-primary">Votes: <%= item.vote_count %></span>
                            <span class="badge bg-secondary">Comments: <%= item.comments.length %></span>
                        </div>
                    </div>
                    
                    <% if (item.comments.length > 0) { %>
                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Comments:</h6>
                            <% item.comments.forEach(comment => { %>
                                <div class="card comment-card mb-2">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <div class="d-flex align-items-center mb-2">
                                                    <% if (comment.commenter_picture) { %>
                                                        <img src="<%= comment.commenter_picture %>" alt="Commenter" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                                    <% } else { %>
                                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 30px; height: 30px;">
                                                            <span class="text-white"><%= comment.commenter_display_name ? comment.commenter_display_name.charAt(0).toUpperCase() : 'U' %></span>
                                                        </div>
                                                    <% } %>
                                                    <h6 class="card-subtitle mb-1 text-muted">
                                                        <%= comment.commenter_display_name ? `${comment.commenter_display_name} (@${comment.commenter_username})` : comment.commenter_username %>
                                                    </h6>
                                                </div>
                                                <p class="card-text"><%= comment.content %></p>
                                            </div>
                                            <div>
                                                <% if (comment.user_id === locals.user?.id) { %>
                                                    <form action="/comment/delete/<%= comment.id %>?next=/" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this comment?')">
                                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                    </form>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                    
                    <form action="/comment" method="POST" class="mt-3">
                        <input type="hidden" name="itemId" value="<%= item.id %>">
                        <div class="form-group">
                            <textarea name="content" class="form-control" rows="3" placeholder="Add a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post Comment</button>
                    </form>
                </div>
            </div>
        </div>
    <% }); %>
</div>
