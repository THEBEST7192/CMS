<div class="container-fluid">
    <% if (locals.error) { %>
        <div class="col-12 mb-4">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    <% } %>
    
    <% if (locals.success) { %>
        <div class="col-12 mb-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-6">
            <% items.forEach(function(item, index) { %>
                <% if (index % 2 === 0) { %>
                    <div class="mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <% if (item.author_picture) { %>
                                        <img src="<%= item.author_picture %>" alt="Author" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                            <span class="text-white"><%= item.author_display_name ? item.author_display_name.charAt(0).toUpperCase() : 'U' %></span>
                                        </div>
                                    <% } %>
                                    <div>
                                        <h5 class="card-title mb-0"><%= item.title %></h5>
                                        <small class="text-muted">Posted by <%= item.author_display_name ? `${item.author_display_name} (@${item.author_username})` : item.author_username %> on <%= new Date(item.created_at).toLocaleString() %></small>
                                    </div>
                                </div>
                                
                                <p class="card-text"><%= item.content %></p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <% if (locals.user) { %>
                                        <form action="/vote/<%= item.id %>?type=upvote" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm <%= item.hasVoted ? 'btn-primary' : 'btn-outline-primary' %>">
                                                <i class="bi bi-hand-thumbs-up<%= item.hasVoted ? '-fill' : '' %>"></i>
                                                <%= item.hasVoted ? 'Unvote' : 'Vote' %>
                                            </button>
                                        </form>
                                        
                                        <% if (locals.user.id === item.user_id || locals.user.role === 'admin') { %>
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editPostModal<%= item.id %>">
                                                    Edit Post
                                                </button>
                                                <form action="/post/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this post? This action cannot be undone.')">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete Post</button>
                                                </form>
                                            </div>
                                        <% } %>
                                    <% } %>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-primary">Votes: <%= item.vote_count %></span>
                                        <span class="badge bg-secondary">Comments: <%= item.comments.length %></span>
                                    </div>
                                </div>
                                
                                <% if (item.comments.length > 0) { %>
                                    <div class="mt-3">
                                        <h6 class="text-muted mb-2">Comments:</h6>
